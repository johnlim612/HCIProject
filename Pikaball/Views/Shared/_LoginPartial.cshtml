@using Microsoft.AspNetCore.Identity
@using Pikaball.Areas.Identity.Data
@inject SignInManager<PikaballUser> SignInManager
@inject UserManager<PikaballUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item ">
            <a class="nav-link btn-group-toggle navi-button mr-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline " asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Game", new { area = "" })">
                <input type="submit" class="nav-link btn-group-toggle navi-button border-0" value="Logout" />
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link btn-group-toggle navi-button mr-2" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn-group-toggle navi-button" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
